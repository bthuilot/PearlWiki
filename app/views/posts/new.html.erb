<% provide(:title, "New Post") %>
<div class="row justify-content-center">
  <div class="col-10">
    <%=  form_for @post, method: :post, url: '/page/create'  do |form| %>
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>

      <%= form.label :contents %>
      <%= form.text_area :contents, class: 'form-control', style: "font-family:monospace;", rows: '20' %>

      <%= hidden_field_tag 'updated', Time.now %>
      <%= hidden_field_tag 'created', Time.now %>

      <br>
      <%= form.label :category_id %>
      <br>
      <%= form.select "category_id", Category.all.collect {|c| [ c.name, c.id ] }, class: 'form-control'%>
      <br>
      <br>
      <%= form.submit class: 'btn btn-primary mb-2' %>
    <%end%>
  </div>
</div>