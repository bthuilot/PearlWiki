<% provide(:title, "New Post") %>
<div class="row justify-content-center">
  <div class="col-6">
    <%=  form_for @post, method: :post, url: '/page/create'  do |form| %>
      <%= form.label :title %>
      <%= form.text_field :title %>

      <%= form.label :contents %>
      <%= form.text_area :contents %>

      <%= hidden_field_tag 'updated', Time.now %>
      <%= hidden_field_tag 'created', Time.now %>

      <%= form.select "category_id", Category.all.collect {|c| [ c.name, c.id ] } %>
      <%= form.submit %>
    <%end%>
  </div>
</div>