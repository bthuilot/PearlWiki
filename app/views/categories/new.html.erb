<% provide(:title, "Create Category") %>
<div class="row justify-content-center">
  <div class="col-6">
    <%= form_for @category, method: :post, url: '/categories/create'  do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name %>

      <%= form.label "Home page" %>
      <%= form.text_area :homepage,  class: 'form-control', style: "font-family:monospace;", rows: '20'%>

      <%= form.submit %>
    <% end %>
  </div>
</div>