<% provide(:title, @category.name + " | RailsWiki") %>
<div class="row justify-content-center align-items-center">
  <div class="col-9">
    <h1 class="category-title"><%= @category.name %></h1>
  </div>
  <div class="col-3 text-center">
    <a href="<%= edit_categories_url(@category.name) %>" role="button" class="btn btn-success align-middle">Edit
      Category</a>
    <a data-confirm="Are you sure you want to delete this page?" data-method="delete" href="<%= destroy_categories_url(@category.name) %>" role="button" class="btn btn-danger align-middle">Delete
      Category</a>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-12">
    <hr/>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-10">
    <%= @markdown.render(h @category.homepage).html_safe %>
  </div>
</div>